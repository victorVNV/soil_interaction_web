@article{andriuzzi2020,
  title = {Body Size Structure of Soil Fauna along Geographic and Temporal Gradients of Precipitation in Grasslands},
  author = {Andriuzzi, Walter S. and Franco, Andr{\'e} L.C. and Ankrom, Katharine E. and Cui, Shuyan and {de Tomasel}, Cecilia M. and Guan, Pingting and Gherardi, Laureano A. and Sala, Osvaldo E. and Wall, Diana H.},
