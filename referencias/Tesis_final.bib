@article{Jensen2019,
  title = {Prey-Specific Experience Affects Prey Preference and Time to Kill in the Soil Predatory Mite {{Gaeolaelaps}} Aculeifer {{Canestrini}}},
  author = {Jensen, Kim and Toft, S{\o}ren and S{\o}rensen, Jesper G. and Sigsgaard, Lene and Kristensen, Torsten N. and Overgaard, Johannes and Holmstrup, Martin},
  year = {2019},
  month = dec,
  journal = {Biological Control},
