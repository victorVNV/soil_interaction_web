@article{Hubert2001,
  title = {Feeding Preferences and Gut Contents of Three Panphytophagous Oribatid Mites ({{Acari}}: {{Oribatida}})},
  shorttitle = {Feeding Preferences and Gut Contents of Three Panphytophagous Oribatid Mites ({{Acari}}},
