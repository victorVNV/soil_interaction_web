@article{HiolHiol1994,
  title = {The Feeding Preference of Mycophagous {{Collembola}} Varies with the Ectomycorrhizal Symbiont},
  author = {Hiol Hiol, F. and Dixon, R. K. and Curl, E. A.},
  year = {1994},
