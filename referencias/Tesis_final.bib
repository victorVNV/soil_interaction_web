@article{Sechi2014,
  title = {Collembola Feeding Habits and Niche Specialization in Agricultural Grasslands of Different Composition},
  author = {Sechi, Valentina and D'Annibale, Alessandra and Ambus, Per and S{\'a}rossy, Zsuzsa and Krogh, Paul Henning and Eriksen, J{\o}rgen and Holmstrup, Martin},
  year = {2014},
