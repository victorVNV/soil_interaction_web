}

@article{guiet2016,
  title = {Modelling the Community Size-Spectrum: Recent Developments and New Directions},
  shorttitle = {Modelling the Community Size-Spectrum},
  author = {Guiet, J{\'e}r{\^o}me and Poggiale, Jean-Christophe and Maury, Olivier},
  year = {2016},
