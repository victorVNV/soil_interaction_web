@article{Diaz-Aguilar2013,
  title = {Trophic Ecology of Mesostigmatan and Oribatid Mites in Harvested and Control Coniferous and Deciduous Stands of the Boreal Mixedwood Forest Determined Using {{15N}} Stable Isotopes},
  author = {{D{\'i}az-Aguilar}, Irma and Quideau, Sylvie A.},
