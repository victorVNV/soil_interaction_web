@article{Klarner2013,
  title = {Trophic Diversity and Niche Partitioning in a Species Rich Predator Guild \textendash{} {{Natural}} Variations in Stable Isotope Ratios ({{13C}}/{{12C}}, {{15N}}/{{14N}}) of Mesostigmatid Mites ({{Acari}}, {{Mesostigmata}}) from {{Central European}} Beech Forests},
