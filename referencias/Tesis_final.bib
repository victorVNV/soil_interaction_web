@article{Potapov2016,
  title = {Stable Isotope Composition of Mycophagous Collembolans versus Mycotrophic Plants: {{Do}} Soil Invertebrates Feed on Mycorrhizal Fungi?},
  shorttitle = {Stable Isotope Composition of Mycophagous Collembolans versus Mycotrophic Plants},
  author = {Potapov, Anton M. and Tiunov, Alexei V.},
  year = {2016},
  month = feb,
  journal = {Soil Biology and Biochemistry},
  volume = {93},
  pages = {115--118},
  issn = {0038-0717},
  doi = {10.1016/j.soilbio.2015.11.001},
  urldate = {2022-04-27},
  abstract = {Ectomycorrhizal fungi constitute a large proportion of the belowground microbial biomass and contribute significantly to nutrient cycling, but their role in soil food webs remains poorly known. In this study, we compared the {$\delta$}13C and {$\delta$}15N values of collembolans and mycoheterotrophic plants. Stable isotope composition of collembolans was very similar to those of mycotrophic plants associated with saprotrophic fungi. In contrast, mycotrophic plants associated with mycorrhizal fungi were enriched in 15N relative to collembolans by at least 5\textperthousand. Our data suggest that soil collembolans do not use mycorrhizal fungi as the main food source, and support an emerging view that extramatrical mycorrhizal mycelium can be retained in the soil to serve as a progenitor of stabilized soil organic matter.},
  langid = {english},
  keywords = {Belowground C allocation,Fungivores,Mycoheterotrophic plants,Root carbon,Soil food webs}
}

@article{Potapov2016a,
  title = {Connecting Taxonomy and Ecology: {{Trophic}} Niches of Collembolans as Related to Taxonomic Identity and Life Forms},
  shorttitle = {Connecting Taxonomy and Ecology},
  author = {Potapov, Anton A. and Semenina, Eugenia E. and Korotkevich, Anastasiya Yu. and Kuznetsova, Natalia A. and Tiunov, Alexei V.},
  year = {2016},
  month = oct,
  journal = {Soil Biology and Biochemistry},
  volume = {101},
  pages = {20--31},
  issn = {0038-0717},
  doi = {10.1016/j.soilbio.2016.07.002},
  urldate = {2022-04-29},
  abstract = {Collembola are among the most abundant, diverse and functionally important groups of soil animals. Collembolans inhabit different litter and soil layers and their food objects are intimately related to their habitat. Morphological differences that separate high rank taxa of collembolans have clear functional meaning in relation to life style and habitat requirements (including position in the soil profile). However, no study has tested the hypothesis that the species within the major functional groups also differ in terms of trophic positions. This hypothesis was tested for the first time using stable isotope analysis. We compiled original and published data on the stable isotope composition of 82 collembolan species in temperate forest ecosystems. The {$\delta$}13C and {$\delta$}15N values of collembolans were found related to their life forms, reflecting a shift in available food objects across different habitat layers and matching the vertical isotopic gradient of soil organic matter. The trophic niche of species varied among different collembolan orders and families, indicating a pronounced phylogenetic signal and supporting the trophic niche conservatism hypothesis. Considering stable isotope compositions, as well as the taxonomic identity and life form of species, we outlined four collembolan functional guilds that use different types of food and perform different ecosystem functions.},
  langid = {english},
  keywords = {Food webs,Microarthropods,Soil communities,Stable isotope analysis,Taxonomic sufficiency,Trophic guild}
}

