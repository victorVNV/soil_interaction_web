@article{zinger2019,
  title = {Body Size Determines Soil Community Assembly in a Tropical Forest},
  author = {Zinger, Lucie and Taberlet, Pierre and Schimann, Heidy and Bonin, Aur{\'e}lie and Boyer, Fr{\'e}d{\'e}ric and De Barba, Marta and Gaucher, Philippe and Gielly, Ludovic and Giguet-Covex, Charline and Iribar, Amaia and R{\'e}jou-M{\'e}chain, Maxime and Ray{\'e}, Gilles and Rioux, Delphine and Schilling, Vincent and Tymen, Blaise and Viers, J{\'e}r{\^o}me and Zouiten, Cyril and Thuiller, Wilfried and Coissac, Eric and Chave, J{\'e}r{\^o}me},
