@article{laigle2018,
  title = {Species Traits as Drivers of Food Web Structure},
  author = {Laigle, Idaline and Aubin, Isabelle and Digel, Christoph and Brose, Ulrich and Boulangeat, Isabelle and Gravel, Dominique},
  year = {2018},
